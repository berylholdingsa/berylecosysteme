# Mobility AI Engine Configuration
# ================================

# API Configuration
MOBILITY_API_URL=https://api.mobility.example.com
MOBILITY_API_KEY=your-api-key-here
MOBILITY_API_SECRET=your-api-secret-here

# HTTP Client Configuration
MOBILITY_HTTP_TIMEOUT=30
MOBILITY_HTTP_MAX_RETRIES=3

# Fleet Configuration
MOBILITY_DEFAULT_FORECAST_HORIZON=24
MOBILITY_DEFAULT_TIME_WINDOW=hourly
MOBILITY_BATCH_SIZE=50

# Caching (Future)
# MOBILITY_CACHE_ENABLED=true
# MOBILITY_CACHE_TTL=3600

# Logging
MOBILITY_LOG_LEVEL=INFO
MOBILITY_LOG_DETAILED=false

# Feature Flags
MOBILITY_DEMAND_PREDICTION_ENABLED=true
MOBILITY_ROUTE_OPTIMIZATION_ENABLED=true
MOBILITY_FLEET_ANALYSIS_ENABLED=true
MOBILITY_MAINTENANCE_PREDICTION_ENABLED=true
MOBILITY_DISTRIBUTION_OPTIMIZATION_ENABLED=true

# Alerting Thresholds
MOBILITY_MAINTENANCE_ALERT_THRESHOLD=0.2
MOBILITY_BATTERY_HEALTH_THRESHOLD=0.8
MOBILITY_UTILIZATION_TARGET=0.85

# Integration Endpoints
FINTECH_API_URL=https://api.fintech.example.com
ESG_API_URL=https://api.esg.example.com
SOCIAL_API_URL=https://api.social.example.com
