{
  "dashboard": {
    "title": "Beryl Core API Observability",
    "tags": ["beryl", "api", "observability"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Tentatives d'accès non autorisées (401/403)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"401|403\"}[5m])",
            "legendFormat": "Unauthorized/Forbidden"
          }
        ]
      },
      {
        "title": "Performance et latence des endpoints",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile latency"
          }
        ]
      },
      {
        "title": "Flux multi-domaines et événements Zero-Trust",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{domain=~\"fintech|mobility|esg|social\"}[5m])",
            "legendFormat": "{{domain}} requests"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}