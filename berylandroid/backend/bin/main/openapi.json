{
  "openapi": "3.0.3",
  "info": {
    "title": "Beryl Backend API",
    "version": "1.0.0",
    "description": "Server-side business logic API"
  },
  "servers": [
    { "url": "http://localhost:8080" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "AuthVerifyRequest": {
        "type": "object",
        "properties": {
          "idToken": { "type": "string" }
        },
        "required": ["idToken"]
      },
      "AuthVerifyResponse": {
        "type": "object",
        "properties": {
          "uid": { "type": "string" },
          "email": { "type": "string", "nullable": true },
          "name": { "type": "string", "nullable": true },
          "emailVerified": { "type": "boolean" }
        },
        "required": ["uid", "emailVerified"]
      },
      "UserDto": {
        "type": "object",
        "properties": {
          "uid": { "type": "string" },
          "email": { "type": "string", "nullable": true },
          "displayName": { "type": "string", "nullable": true },
          "createdAt": { "type": "integer", "format": "int64" },
          "updatedAt": { "type": "integer", "format": "int64" }
        },
        "required": ["uid", "createdAt", "updatedAt"]
      },
      "BusinessComputeRequest": {
        "type": "object",
        "properties": {
          "signal": { "type": "string" },
          "weight": { "type": "integer", "minimum": 1, "maximum": 100 },
          "factors": { "type": "array", "items": { "type": "integer" } }
        },
        "required": ["signal", "weight"]
      },
      "BusinessComputeResponse": {
        "type": "object",
        "properties": {
          "score": { "type": "integer" },
          "decision": { "type": "string" },
          "rationale": { "type": "string" }
        },
        "required": ["score", "decision", "rationale"]
      },
      "CommunityPostRequest": {
        "type": "object",
        "properties": {
          "content": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["content"]
      },
      "CommunityPostResponse": {
        "type": "object",
        "properties": {
          "postId": { "type": "string" },
          "createdAt": { "type": "integer", "format": "int64" }
        },
        "required": ["postId", "createdAt"]
      },
      "CommunityPostDto": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "authorUid": { "type": "string" },
          "content": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "createdAt": { "type": "integer", "format": "int64" }
        },
        "required": ["id", "authorUid", "content", "tags", "createdAt"]
      },
      "CommunityFeedResponse": {
        "type": "object",
        "properties": {
          "items": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/CommunityPostDto" }
          }
        },
        "required": ["items"]
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": { "type": "string" },
          "details": { "type": "string", "nullable": true }
        },
        "required": ["error"]
      }
    }
  },
  "paths": {
    "/auth/verify": {
      "post": {
        "summary": "Verify Firebase ID token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AuthVerifyRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Verified",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuthVerifyResponse" }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/users/me": {
      "get": {
        "summary": "Get or create user profile",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "User profile",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/UserDto" }
              }
            }
          },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/business/compute": {
      "post": {
        "summary": "Run sensitive business computation",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/BusinessComputeRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Computation result",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/BusinessComputeResponse" }
              }
            }
          },
          "400": { "description": "Validation error" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/community/post": {
      "post": {
        "summary": "Create a community post",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CommunityPostRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CommunityPostResponse" }
              }
            }
          },
          "400": { "description": "Validation error" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/community/feed": {
      "get": {
        "summary": "Get community feed",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "default": 20, "minimum": 1, "maximum": 50 }
          }
        ],
        "responses": {
          "200": {
            "description": "Feed items",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CommunityFeedResponse" }
              }
            }
          },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "OK",
            "content": { "application/json": { "schema": { "type": "object" } } }
          }
        }
      }
    }
  }
}
